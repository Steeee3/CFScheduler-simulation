{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.c",
                "gui/htop.c",
                "task/do_nothing.c",
                "interrupt_handler/fork_exec.c",
                "interrupt_handler/tick.c",
                "scheduler/scheduler.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lncurses",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}